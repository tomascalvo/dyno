<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- SEO Meta Tags -->
    <meta name="description" content="Dyno is an ASP.NET MVC web app for tracking job applications and career development.">
    <meta name="author" content="Tomás Calvo">

    <!-- OG Meta Tags to improve the way the post looks when you share the page on Facebook, Twitter, LinkedIn -->
    <meta property="og:site_name" content="Dyno" /> <!-- website name -->
    <meta property="og:site" content="https://dyno.azurewebsites.net/" /> <!-- website link -->
    <meta property="og:title" content="Dyno" /> <!-- title shown in the actual shared post -->
    <meta property="og:description" content="Dyno is an ASP.NET MVC web app for tracking job applications and career development." /> <!-- description shown in the actual shared post -->
    <meta property="og:image" content="" /> <!-- image link, make sure it's jpg -->
    <meta property="og:url" content="https://dyno.azurewebsites.net/" /> <!-- where do you want your post to link to -->
    <meta name="twitter:card" content="summary_large_image"> <!-- to have large image post format in Twitter -->
    <!-- Webpage Title -->
    <title>@ViewBag.Title - Dyno</title>

    <!-- Styles -->
    @Styles.Render("~/Content/css")
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap" rel="stylesheet">
    <link href="~/Content/Landing_Page_Content/css/bootstrap.css" rel="stylesheet">
    <link href="~/Content/Landing_Page_Content/css/fontawesome-all.css" rel="stylesheet">
    <link href="~/Content/Landing_Page_Content/css/swiper.css" rel="stylesheet">
    <link href="~/Content/Landing_Page_Content/css/magnific-popup.css" rel="stylesheet">
    <link href="~/Content/Landing_Page_Content/css/styles.css" rel="stylesheet">

    <!-- Scripts -->
    @Scripts.Render("~/bundles/modernizr")

</head>
<body data-spy="scroll" data-target=".fixed-top">

    <!-- Image Logo -->
    <a href="@Url.Action("Index", "Home")"
       style="display: flex; align-items: center; position: absolute; top: 2.75rem; left: 1rem; width: 153px;  z-index: 1; text-decoration: none;">
        <img alt="Dyno Logo" style="width: 40px; height: 40px;" src="@Url.Content("~/Content/Icons/project-icons/dyno-logo-lightmode.svg")" />
        <h2 class="logo-text" style="margin: auto 0;">
            Dyno
        </h2>
    </a>

    <!-- Text Logo - Use this if you don't have a graphic logo -->
    <!-- <a class="logo-text" href="index.html">NAME</a> -->
    <!-- Navigation -->
    <nav>


        <div id="menuToggle">
            <input id="isAgeSelected" type="checkbox" />

            <!-- Hamburger Icon -->
            <span></span>
            <span></span>
            <span></span>

            <ul id="menu">
                @*<li><a href="index.html">Home</a></li>*@
                @*<li><a href="article.html">Article</a></li>*@
                @*<li><a href="features.html">Features</a></li>*@
                @*<li><a href="pricing.html">Pricing</a></li>*@
                @*<li><a href="privacy.html">Privacy</a></li>*@
                @*<li><a href="terms.html">Terms</a></li>*@
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { })</li>
                <li class="nav-item">@Html.ActionLink("Jobs", "Index", "EmploymentListings", null, new { })</li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">@Html.ActionLink("Offers", "Index", "EmploymentOffers", null, new { })</li>
                }
                <li class="nav-item">@Html.ActionLink("Companies", "Index", "Companies", null, new { })</li>
                <li class="nav-item">@Html.ActionLink("Skills", "Index", "Skills", null, new { })</li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">@Html.ActionLink("My Projects", "Index", "Projects", null, new { })</li>
                }
                else
                {
                    <li class="nav-item">@Html.ActionLink("Showcase", "Showcase", "Projects", null, new { })</li>
                }
                <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { })</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { })</li>
                @Html.Partial("_LoginPartial")
            </ul>

        </div> <!-- end of menuToggle-->
    </nav> <!-- end of nav -->
    <!-- end of navigation -->

    @RenderBody()

    <!-- Footer -->
    <div class="footer bg-black">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="footer-col third">
                        <span class="fa-stack">
                            <a href="https://twitter.com/calvodev">
                                <i class="fas fa-circle fa-stack-2x"></i>
                                <i class="fab fa-twitter fa-stack-1x"></i>
                            </a>
                        </span>
                        <p class="p-small">Direct inquiries to <a href="mailto:tomasrcalvo@gmail.com"><strong>tomasrcalvo@gmail.com</strong></a></p>
                    </div> <!-- end of footer-col -->
                </div> <!-- end of col -->
            </div> <!-- end of row -->
        </div> <!-- end of container -->
    </div> <!-- end of footer -->
    <!-- Copyright -->
    <div class="copyright bg-black">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p class="p-small">Copyright © @DateTime.Now.Year <span><a href="https://tomcalvo.site/">Tomás Calvo</a></span></p>
                </div> <!-- end of col -->
            </div> <!-- enf of row -->
        </div> <!-- end of container -->
    </div> <!-- end of copyright -->
    <!-- end of copyright -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
