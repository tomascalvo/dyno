@using Microsoft.AspNet.Identity;
@model IEnumerable<DevPath.Models.EmploymentOffer>
@{
    ViewBag.Title = "Offers";
}

<!-- Header -->
<header class="ex-header bg-black">
    <div class="container">
        <div class="row">
            <div class="col-xl-10">
                <h1>Offers</h1>
                <p>You have @Model.Count() offers.</p>
                <p>@Html.ActionLink("Add Offer", "New", "EmploymentOffers", new { @class = "btn btn-primary" })</p>
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</header> <!-- end of ex-header -->
<!-- end of header -->


@if (Model.Any())
{
    <!-- Table -->
    <div class="ex-basic-1 bg-black pb-4">
        <div class="container">
            <table class="table table-bordered table-hover table-dark">
                <thead>
                    <tr>
                        <th class="d-none d-sm-table-cell">Title</th>
                        <th>Company</th>
                        <th class="d-none d-sm-table-cell">Compensation</th>
                        <th class="d-none d-sm-table-cell" class="d-none d-sm-table-cell">Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var offer in Model)
                    {
                        <tr>
                            @*TITLE*@
                            <td class="d-none d-sm-table-cell">
                                @offer.EmploymentListing.Title
                            </td>
                            @*COMPANY*@
                            <td>
                                <p>
                                    Client: @offer.EmploymentListing.ClientCompany.Title
                                </p>
                                <p>
                                    Recruiter: @offer.EmploymentListing.StaffingCompany.Title
                                </p>
                            </td>
                            @*COMPENSATION*@
                            <td class="d-none d-sm-table-cell">
                                <p>
                                    Offered: @offer.PayQuantity
                                </p>
                                <p>
                                    Listed: @offer.PayQuantity
                                </p>
                            </td>
                            @*DETAILS*@
                            <td class="d-none d-sm-table-cell">
                                <p>
                                    Offer Details:
                                    <span>@offer.FullText</span>
                                </p>
                                <p>
                                    Listing Details:
                                    <span>@offer.EmploymentListing.FullText</span>
                                </p>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

